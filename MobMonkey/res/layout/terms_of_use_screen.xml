<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:background="@drawable/navigation_bar">
		
		    <Button android:id="@+id/btnreject"
		        android:layout_width="50dp"
		        android:layout_height="33dp"
			    android:layout_marginLeft="5dp"
			    android:paddingBottom="2dp"
			    android:background="@drawable/nav_bar_button_blank"
		        android:text="@string/btn_reject"
		        android:textSize="12sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"
		        android:onClick="viewOnClick"
		        android:visibility="invisible"/>
		    
			<TextView android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center"
				android:text="@string/tv_title_terms_of_use"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@android:color/white"
				android:textStyle="bold"/>
			
			<Button android:id="@+id/btnaccept"
		        android:layout_width="50dp"
		        android:layout_height="33dp"
			    android:layout_marginRight="5dp"
			    android:paddingBottom="2dp"
			    android:background="@drawable/nav_bar_button_blank"
		        android:text="@string/btn_accept"
		        android:textSize="12sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"
		        android:onClick="viewOnClick"
		        android:visibility="invisible"/>
			
		</LinearLayout>
	
	<ScrollView android:layout_width="match_parent"
	    android:layout_height="match_parent">
			
    		<TextView android:id="@+id/tvtos"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="@dimen/padding_medium"
			    android:textAppearance="?android:attr/textAppearanceSmall" />
    		
	</ScrollView>
    
</LinearLayout>