<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<TextView android:layout_width="match_parent"
		android:layout_height="50dp"
		android:gravity="center"
		android:text="@string/btn_sign_up"
		android:textAppearance="@android:style/TextAppearance.Large"
		android:textColor="@android:color/white"
		android:background="@drawable/navigation_bar"/>
	
	<ScrollView android:layout_width="match_parent"
		android:layout_height="match_parent">
	
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<EditText android:id="@+id/etfirstname"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_firstname"
				android:inputType="text"/>
				
			<EditText android:id="@+id/etlastname"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_lastname"
				android:inputType="text"/>
				
			<EditText android:id="@+id/etemailaddress"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_emailaddress"
				android:inputType="text"/>
			
			<EditText android:id="@+id/etpassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_password"
				android:inputType="textPassword"/>
			       
			<EditText android:id="@+id/etpasswordconfirm"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_passwordconfirm"
				android:inputType="textPassword"/>
					
			<EditText android:id="@+id/etbirthdate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_birthdate"
				android:editable="false"/>
			
			<EditText android:id="@+id/etgender"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_gender"
				android:editable="false"/>
			
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center">
				
				<CheckBox android:id="@+id/cbagreetos"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="10dp"/>
				
				<TextView android:id="@+id/tvtos"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/cb_agree_tos"
				    android:textColor="@drawable/selector_termsofuse"
				    android:onClick="viewOnClick"
				    android:clickable="true"/>
				
			</LinearLayout>
			
			<Button android:id="@+id/btnsignup"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/btn_sign_up"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:onClick="viewOnClick"
				android:background="@drawable/orange_button_background"
				android:textColor="@android:color/white"
				android:textStyle="bold"/>
			
			<Button android:id="@+id/btnsignupfacebook"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/btn_sign_up_facebook"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:onClick="viewOnClick"
				android:background="@drawable/orange_button_background"
				android:textColor="@android:color/white"
				android:textStyle="bold"/>
			
			<Button android:id="@+id/btnsignuptwitter"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="10dp"
				android:text="@string/btn_sign_up_twitter"
				android:onClick="viewOnClick"
				android:background="@drawable/orange_button_background"
				android:textColor="@android:color/white"
				android:textStyle="bold"/>
		
		</LinearLayout>
	
	</ScrollView>
</LinearLayout>
