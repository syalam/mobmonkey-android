<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@android:color/black">
	    
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="User Info"
			android:textAppearance="@android:style/TextAppearance.Large"
			android:textColor="@android:color/white"/>
	    
	</RelativeLayout>
	
	<ScrollView android:layout_width="match_parent"
		android:layout_height="match_parent">
	
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<EditText android:id="@+id/etfirstname"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_firstname"
				android:inputType="text"/>
				
			<EditText android:id="@+id/etlastname"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_lastname"
				android:inputType="text"/>
				
			<EditText android:id="@+id/etemailaddress"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_emailaddress"
				android:inputType="text"/>
			
					
			<EditText android:id="@+id/etbirthdate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_birthdate"
				android:editable="false"/>
			
			<EditText android:id="@+id/etgender"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_gender"
				android:editable="false"/>

			
			<Button android:id="@+id/btnsignup"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/btn_sign_up"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:onClick="viewOnClick"/>
		
		</LinearLayout>
	
	</ScrollView>

</LinearLayout>