<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >
    
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@drawable/navigation_bar">
	    
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/tv_title_my_info"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold"/>
	    
	</RelativeLayout>
	
	<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<EditText android:id="@+id/etfirstname"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_hint_firstname"
				android:inputType="text"/>
				
			<EditText android:id="@+id/etlastname"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_hint_lastname"
				android:inputType="text"/>
				
			<EditText android:id="@+id/etemailaddress"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_hint_emailaddress"
				android:inputType="text"/>
			
			<EditText android:id="@+id/etpassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_hint_password"
				android:inputType="textPassword"/>
			       
			<EditText android:id="@+id/etpasswordconfirm"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_hint_passwordconfirm"
				android:inputType="textPassword"/>
					
			<EditText android:id="@+id/etbirthdate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_hint_birthdate"
				android:editable="false"/>
			
			<EditText android:id="@+id/etgender"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="@string/et_hint_gender"
				android:editable="false"/>
	</LinearLayout>
	
</LinearLayout>