<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >
    
   	<TextView android:layout_width="wrap_content"
		android:layout_height="50dip"
		android:layout_gravity="center"
		android:gravity="center"
		android:text="@string/tv_add_location"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@android:color/white"
		android:textStyle="bold"
		android:background="@drawable/navigation_bar"/>
    
    <ScrollView android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
		    <EditText android:id="@+id/etlocationname"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:hint="@string/et_location_name"
						android:inputType="text"/>
		    <EditText android:id="@+id/etcategories"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:hint="@string/et_location_categories"
						android:inputType="text"/>
		    <EditText android:id="@+id/etstreet"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:hint="@string/et_location_street"
						android:inputType="text"/>
		    <EditText android:id="@+id/etcity"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:hint="@string/et_location_city"
						android:inputType="text"/>
		    <EditText android:id="@+id/etstate"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:hint="@string/et_location_state"
						android:inputType="text"/>
		    <EditText android:id="@+id/etzip"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:hint="@string/et_location_zip"
						android:inputType="text"/>
		    <EditText android:id="@+id/etphone"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:hint="@string/et_location_phone"
						android:inputType="phone"/>
		    
		    <Button android:id="@+id/btnaddlocation"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/btn_add_location"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:onClick=""
					android:background="@drawable/orange_button_background"
					android:textColor="@android:color/white"
					android:textStyle="bold"/>
		    
	    </LinearLayout>
		    
    </ScrollView>

</LinearLayout>