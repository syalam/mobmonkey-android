<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/backgroundcolor"
	android:orientation="vertical" >
	
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@drawable/navigation_bar">
		
		<TextView android:id="@+id/tvsearchresultstitle"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/tv_title_add_location"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold"/>
		
		<Button android:id="@+id/btnaddloc"
		    android:layout_width="wrap_content"
		    android:layout_height="33dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:background="@drawable/nav_bar_button_blank"
		    android:layout_marginRight="4dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingBottom="4dp"
		    android:text="@string/ad_btn_cancel"
		    android:textStyle="bold"
			android:textColor="@android:color/white"
			android:onClick="viewOnClick"
			android:visibility="invisible"/>
		
		<Button android:id="@+id/btnplus"
		    android:layout_width="33dp"
		    android:layout_height="33dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:background="@drawable/nav_bar_button_blank"
		    android:layout_marginRight="4dp"
		    android:paddingBottom="4dp"
		    android:text="@string/btn_add_loc"
		    android:textStyle="bold"
		    android:textSize="22sp"
			android:textColor="@android:color/white"
			android:onClick="viewOnClick"/>
		
	</RelativeLayout>
	
	<fragment android:id="@+id/fragmap"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		class="com.google.android.gms.maps.SupportMapFragment"/>
	
</LinearLayout>